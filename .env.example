# Database
DATABASE_URL="file:./db/custom.db"

# WhatsApp Configuration
# Reemplaza con el número de WhatsApp de tu negocio (formato: código de país + número sin espacios ni guiones)
# Ejemplo: 5215512345678
NEXT_PUBLIC_WHATSAPP_NUMBER="52XXXXXXXXXX"

# SMTP Configuration para Formulario de Contacto
# Configuración de tu servidor SMTP (correo de dominio)
SMTP_HOST="mail.tudominio.com"          # Ejemplo: mail.suutka.com o smtp.gmail.com
SMTP_PORT="587"                          # 587 (TLS) o 465 (SSL)
SMTP_SECURE="false"                      # true para puerto 465, false para 587
SMTP_USER="contacto@tudominio.com"       # Tu correo completo
SMTP_PASS="tu_contraseña_smtp"           # Contraseña de tu correo
SMTP_FROM="contacto@tudominio.com"       # Correo remitente (normalmente el mismo que SMTP_USER)
SMTP_TO="ventas@tudominio.com"           # Correo donde recibirás los mensajes

# Site URL (opcional)
NEXT_PUBLIC_SITE_URL="https://suutka.com"

# Environment
NODE_ENV="development"
